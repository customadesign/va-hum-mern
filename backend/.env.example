# Database
MONGODB_URI=your_mongodb_connection_string

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=60m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRE=7d

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@linkage.com

# Server
PORT=5000
NODE_ENV=development
SERVER_URL=http://localhost:5000

# Client URLs
CLIENT_URL=http://localhost:3000
ESYSTEMS_CLIENT_URL=http://localhost:3001
ESYSTEMS_FRONTEND_URL=http://localhost:3002

# Frontend URL for Share Links (Optional)
# This is used as a fallback when the share link redirect cannot determine the frontend URL automatically
# In production on Render, the system automatically detects the correct frontend URL
# Production: https://linkage-va-hub.onrender.com
# Development: http://localhost:3000
# Only set this if you need to override the automatic detection
# FRONTEND_URL=https://linkage-va-hub.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Supabase (for file uploads)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_BUCKET=linkage-va-hub

# Optional: E-systems mode
ESYSTEMS_MODE=false

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# LinkedIn OAuth Configuration (Optional)
# IMPORTANT: These are only needed if you want to enable LinkedIn authentication
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# LinkedIn Redirect URI (Optional - defaults are provided)
# This MUST be the FRONTEND URL where LinkedIn redirects users after authorization
# DO NOT use the API URL (containing /api/ or -api.onrender.com)
# Production default: https://linkage-va-hub.onrender.com/auth/linkedin/callback
# Development default: http://localhost:3000/auth/linkedin/callback
# Only set this if you need to override the defaults
# LINKEDIN_REDIRECT_URI=https://linkage-va-hub.onrender.com/auth/linkedin/callback