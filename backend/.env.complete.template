# ===========================================
# LINKAGE VA HUB - COMPLETE ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and configure all required variables
# Security Note: Never commit the actual .env file to version control

# ===========================================
# üîê CORE SECURITY (REQUIRED)
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_chars
JWT_EXPIRE=60m
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_different_from_jwt
JWT_REFRESH_EXPIRE=7d

# Encryption key for sensitive data storage (API keys, payment info)
ENCRYPTION_KEY=your_256_bit_encryption_key_minimum_32_chars

# ===========================================
# üóÑÔ∏è  DATABASE CONFIGURATION (REQUIRED)
# ===========================================
# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# Database Configuration
DB_NAME=linkagevahub
DB_MAX_CONNECTIONS=10
DB_BUFFER_MAX_ENTRIES=0

# ===========================================
# üåê SERVER CONFIGURATION (REQUIRED)
# ===========================================
NODE_ENV=development
PORT=8000
SERVER_URL=http://localhost:8000

# Client URLs (Frontend Applications)
CLIENT_URL=http://localhost:4000
ADMIN_CLIENT_URL=http://localhost:4000
ESYSTEMS_CLIENT_URL=http://localhost:3001
ESYSTEMS_FRONTEND_URL=http://localhost:3002

# ===========================================
# üìß EMAIL SERVICE CONFIGURATION
# ===========================================
# SendGrid Configuration (RECOMMENDED for production)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name

# SMTP Fallback Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name

# Email Domain Configuration
# VA Hub Domain (for VA-related emails)
VA_DOMAIN=linkagevahub.com
VA_EMAIL=hello@linkagevahub.com
VA_EMAIL_NAME=Linkage VA Hub

# Business Domain (for business-related emails)
BUSINESS_DOMAIN=esystemsmanagment.com
BUSINESS_EMAIL=hello@esystemsmanagment.com
BUSINESS_EMAIL_NAME=E-Systems Management

# Admin Domain (for admin/system emails)
ADMIN_DOMAIN=esystemsmanagement.com
ADMIN_EMAIL=noreply@esystemsmanagement.com
ADMIN_EMAIL_NAME=E-Systems Management

# ===========================================
# üìÅ FILE STORAGE CONFIGURATION
# ===========================================
# Supabase Storage (RECOMMENDED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_BUCKET=linkage-va-hub

# AWS S3 Storage (Alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Local Storage (Development only)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=500MB

# ===========================================
# üîí RATE LIMITING & SECURITY
# ===========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=300
RATE_LIMIT_AUTH_MAX=5

# Security Headers
HELMET_CSP_ENABLED=true
CORS_ORIGIN=http://localhost:4000,http://localhost:3000

# Session Security
SESSION_SECRET=your_session_secret_key
COOKIE_SECRET=your_cookie_signing_secret

# ===========================================
# üîó OAUTH CONFIGURATION
# ===========================================
# LinkedIn OAuth (DEPRECATED - Will be removed)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:4000/auth/linkedin/callback

# E-Systems LinkedIn OAuth (DEPRECATED)
LINKEDIN_ESYSTEMS_CLIENT_ID=your_esystems_linkedin_client_id
LINKEDIN_ESYSTEMS_CLIENT_SECRET=your_esystems_linkedin_client_secret

# ===========================================
# üí≥ PAYMENT PROCESSING
# ===========================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# üìä MONITORING & ANALYTICS
# ===========================================
# New Relic APM
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Linkage VA Hub API
NEW_RELIC_ENABLED=true

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# Elasticsearch (Optional - for advanced search)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX=linkage_va_hub

# ===========================================
# üéØ FEATURE FLAGS & MODE CONFIGURATION
# ===========================================
# E-Systems Mode Toggle
ESYSTEMS_MODE=false

# Feature Flags
ENABLE_2FA=true
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_VIDEO_UPLOADS=true
ENABLE_MESSAGING=true

# ===========================================
# üîß DEVELOPMENT & DEBUGGING
# ===========================================
# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
DEBUG_MODE=false

# Development Tools
ENABLE_SWAGGER=true
ENABLE_STATUS_MONITOR=true
ENABLE_REQUEST_LOGGING=true

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/linkage_test
JEST_TIMEOUT=10000

# ===========================================
# üåê EXTERNAL SERVICES
# ===========================================
# VideoSDK (for video calls)
VIDEOSDK_API_KEY=your_videosdk_api_key
VIDEOSDK_SECRET_KEY=your_videosdk_secret_key

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# üöÄ PRODUCTION CONFIGURATION
# ===========================================
# Production URLs
PRODUCTION_API_URL=https://your-api.herokuapp.com
PRODUCTION_CLIENT_URL=https://your-app.herokuapp.com
PRODUCTION_ADMIN_URL=https://your-admin.herokuapp.com

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=3600
MAX_REQUEST_SIZE=50MB

# ===========================================
# üìã CONFIGURATION VALIDATION
# ===========================================
# Required for startup
REQUIRED_VARS=MONGODB_URI,JWT_SECRET,PORT

# Security checklist
# ‚úÖ JWT_SECRET is at least 32 characters
# ‚úÖ ENCRYPTION_KEY is at least 32 characters  
# ‚úÖ All API keys are from secure sources
# ‚úÖ Database connection uses authentication
# ‚úÖ Email service is configured
# ‚úÖ File storage is configured
# ‚úÖ Rate limiting is enabled
# ‚úÖ Error tracking is configured (Sentry)
# ‚úÖ Performance monitoring is configured (New Relic)

# ===========================================
# üìù CONFIGURATION NOTES
# ===========================================
# 1. Generate secure secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 2. MongoDB Atlas: Create cluster, get connection string, whitelist IP
# 3. SendGrid: Verify domain, create API key with mail send permissions
# 4. Supabase: Create project, enable storage, create bucket, get keys
# 5. AWS S3: Create bucket, create IAM user with S3 permissions
# 6. Stripe: Get API keys from dashboard, configure webhooks
# 7. New Relic: Create account, get license key
# 8. Sentry: Create project, get DSN
# 9. LinkedIn: Create app, get client credentials (deprecated)
# 10. Set NODE_ENV=production for production deployment